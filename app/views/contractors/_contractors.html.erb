<table class="table-list">
  <tr>
    <th>Nr</th>
    <th>Short name</th>
    <th>Adress</th>
    <th>Nip/Pesel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contractors.each do |contractor| %>
  <tr>
    <td><%= contractor.id %></td>
    <td><%= contractor.short_name %></td>
    <td><%= contractor.street %>, <%= contractor.code %> <%= contractor.city %> </td>
    <td><%= contractor.pesel %></td>
    <td><%= link_to 'Show', contractor %></td>
    <td class="actions"><%= link_to 'Edit', edit_contractor_path(contractor) %>
      <a href="http://localhost:3000/e-sklep/admin/products/sok-malinowy/edit" class="edit icon_link with-tip icon-edit no-text" data-action="edit" title="Edycja"></a>
    </td>
    <td class="actions"><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @contractors %> 